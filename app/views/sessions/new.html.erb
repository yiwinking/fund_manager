<%= form_tag sessions_path, class: "form-horizontal" do %>
  <fieldset>
    <legend>Login</legend>
    <div class="control-group">
      <%= label_tag :email, nil ,class: "control-label" %>
      <div class="controls">
        <%= text_field_tag :email, params[:email], class: "input-xlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :password, nil, class: "control-label"  %>
      <div class="controls">
        <%= password_field_tag :password, nil ,class: "input-xlarge" %>
      </div>
    </div>
    <div class="control-group">
      <%= label_tag :remember_me, nil, class: "control-label"  %>
      <div class="controls">
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Log in", class: "btn btn-large btn-primary" %>
      <%= link_to "Sign Up", new_user_path, class: "btn btn-large btn-info" %>
      <%= link_to "Login with Github", '/auth/github', class: "btn btn-large btn-success" %>
      <%= link_to "Forgotten password?", new_password_reset_path, class: "btn btn-large btn-warning" %>
    </div>
  </fieldset>
<% end %>
