<h1>Income Records</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Comment</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.date %></td>
        <td><%= record.category.name %></td>
        <td><%= record.amount %></td>
        <td><%= record.comment %></td>
        <td>
          <%= link_to 'Edit', edit_income_record_path(record), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', income_record_path(record), method: :delete, confirm: 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_income_record_path, :class => 'btn btn-primary' %>
