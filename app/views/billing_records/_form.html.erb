<%= simple_form_for @record, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= title %></legend>

    <%= f.input :date %>
    <%= f.input :type do %>
      <%= f.select :type, BillingRecord::TYPES_CN.map { |r| [r[1], r[0]] }, include_blank: false %>
    <% end -%>
    <%= f.association :category, collection: Category.all, include_blank: false %>
    <%= f.input :amount %>
    <%= f.input :comment %>

    <div class="form-actions">
      <%= f.submit t('billing_record.submit'), :class => 'btn btn-primary' %>
      <%= link_to t('cancel'), :back, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
