<div class="control-group">
  <%= label_tag :conditions, t('condition'), class: "control-label" %>
  <div class="controls">
    <%= f.attribute_fields do |a| %>
      <%= a.attribute_select associations: [:category] %>
    <% end %>
    <%= f.predicate_select({}, :class => "span1") %>
    <%= f.value_fields do |v| %>
      <%= v.text_field :value %>
    <% end %>
    <%= link_to t('delete'), '#', class: "remove_fields btn btn-mini btn-danger" %>
  </div>
</div>
